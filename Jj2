    <script>
        // Falling emojis functionality
        const emojis = ['🩷', '💋', '😚', '🫂', '👨‍❤️‍💋‍👨', '💖', '✨', '🌸', '💕', '🎀'];
        const fallingEmojisContainer = document.getElementById('fallingEmojis');
        
        function createFallingEmoji() {
            const emoji = document.createElement('div');
            emoji.className = 'falling-emoji';
            emoji.textContent = emojis[Math.floor(Math.random() * emojis.length)];
            emoji.style.left = Math.random() * 100 + '%';
            emoji.style.animationDelay = Math.random() * 2 + 's';
            emoji.style.animationDuration = (8 + Math.random() * 4) + 's';
            
            fallingEmojisContainer.appendChild(emoji);
            
            // Remove emoji after animation completes
            setTimeout(() => {
                if (emoji.parentNode) {
                    emoji.parentNode.removeChild(emoji);
                }
            }, 12000);
        }
        
        // Create falling emojis at intervals
        setInterval(createFallingEmoji, 800);
        
        // Initial burst of emojis
        for (let i = 0; i < 5; i++) {
            setTimeout(createFallingEmoji, i * 200);
        }
    </script>
